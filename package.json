{
  "name": "web-node",
  "version": "1.0.10",
  "description": "A generic web backend.",
  "documentationWebsite": {
    "name": "webNode",
    "trackingCode": "TODO"
  },
  "homepage": "http://torben.website/webNode",
  "license": "CC-BY-3.0",
  "bin": {
    "webNode": "build/index.js"
  },
  "main": "build/index.js",
  "keywords": [
    "web",
    "backend",
    "rest",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thaibault/webNode.git"
  },
  "dependencies": {
    "clientnode": "latest",
    "node-fetch": "latest",
    "pouchdb": "latest",
    "pouchdb-server": "latest",
    "weboptimizer": "latest"
  },
  "devDependencies": {
    "documentation-website": "latest",
    "qunit-cli": "latest",
    "source-map-support": "latest"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "webOptimizer build",
    "buildDLL": "webOptimizer buildDLL",
    "clear": "webOptimizer clear && rm --force log.txt &>/dev/null",
    "document": "webOptimizer document",
    "lint": "webOptimizer typeCheck && webOptimizer lint",
    "prepublish": "npm run build",
    "serve": "webOptimizer build && build/index.js & pouchdb-server --port 5984 --dir database --config ./database/database.json",
    "start": "npm run serve",
    "test": "webOptimizer test",
    "update": "npm version patch && npm publish",
    "updateDocumentation": "documentationWebsite --log-level info",
    "watch": "webOptimizer build --watch",
    "watchDLL": "webOptimizer buildDLL --watch"
  },
  "webNode": {
    "debug": false,
    "encoding": "utf8",
    "plugin": {
      "directoryPaths": [
        {
          "__evaluate__": "`${currentPath}/plugins/`"
        },
        {
          "__evaluate__": "`${currentPath}/node_modules/`"
        }
      ],
      "directoryNameRegularExpressionPattern": "[a-z][a-zA-Z0-9]+webnodeplugin$",
      "optionsPropertyNames": [
        "webNode"
      ]
    },
    "database": {
      "url": {
        "__evaluate__": "`http://{1}${self.server.application.hostName}:${self.database['httpd/port']}`"
      },
      "user": {
        "name": "admin",
        "password": "admin"
      },
      "log/file": "-",
      "log/level": "info",
      "httpd/host": {
        "__evaluate__": "self.server.application.hostName"
      },
      "httpd/port": "5984"
    },
    "server": {
      "application": {
        "rootPath": {
          "__evaluate__": "currentPath"
        },
        "options": {},
        "port": 8080,
        "hostName": "127.0.0.1"
      },
      "proxy": {
        "logFilePath": {
          "access": "/dev/stdout",
          "error": "/dev/stderr"
        }
      }
    },
    "model": {
      "defaultPropertySpecification": {
        "type": "string",
        "default": null,
        "onCreate": null,
        "onUpdate": null,
        "nullable": true,
        "writable": true,
        "minimum": -1e+21,
        "maximum": 1e+21,
        "regularExpressionPattern": null,
        "constraint": null
      },
      "specialPropertyNames": {
        "allowedRoles": "webNodeAllowedRoles",
        "extend": "webNodeExtends",
        "type": "webNodeType",
        "typeNameRegularExpressionPattern": "^[A-Z][a-z0-9]+$"
      },
      "updateStrategy": "fillUp",
      "types": {
        "_base": {
          "_id": {},
          "creationDateTime": {
            "type": "DateTime",
            "onCreate": "new Date().getTime()",
            "minimum": {
              "__evaluate__": "new Date().getTime()"
            },
            "writable": false,
            "nullable": false
          },
          "updateDateType": {
            "type": "DateTime",
            "onUpdate": "new Date().getTime()",
            "minimum": {
              "__evaluate__": "new Date().getTime()"
            },
            "nullable": false
          },
          "lastUser": {
            "onUpdate": "userContext._id",
            "writable": false,
            "nullable": false
          },
          "webNodeType": {
            "regularExpressionPattern": {
              "__evaluate__": "self.model.specialPropertyNames.typeNameRegularExpressionPattern"
            },
            "nullable": false,
            "minimum": 1,
            "maximum": 999,
            "writable": false
          },
          "webNodeAllowedRoles": [
            "users"
          ]
        }
      }
    }
  },
  "webOptimizer": {
    "targetTechnology": "node",
    "assetPattern": {
      "javaScript": {
        "pattern": "#!/usr/bin/env node\n// -*- coding: utf-8 -*-\n'use strict';\n{1}"
      }
    },
    "exportFormat": {
      "external": "commonjs2",
      "self": "commonjs2"
    },
    "inPlace": {
      "externalLibrary": false
    },
    "path": {
      "source": {
        "base": "source"
      },
      "target": {
        "base": "build"
      }
    }
  }
}
